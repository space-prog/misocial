mixin card(oneCard)
    figure 
        figcaption 
            .flex.center 
                img(src=oneCard.img, alt=oneCard.alt).figImg
            p.personal.textCenter.personal #{oneCard.personal}
            p.price.textCenter
                sup 
                    span.currency #{oneCard.currency}
                b #{oneCard.price}
                if isMonth 
                    span.monthYear /month
                else 
                    span.monthYear /year
            ul.description 
                for stroke in oneCard.description
                    li #{stroke}
            .flex.center
                a(href=oneCard.href) #{oneCard.ctaText} 

mixin line(line, text="text", lineClass="line", textClass="white")
    .test.flex.center
        span(class=lineClass).line
        b(class=textClass).text_test=text
        span(class=lineClass).line