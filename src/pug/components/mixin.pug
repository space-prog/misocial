mixin menu(mainMenu, colorTheme="light", fixed="")
    .navigation.flex-between.items-center(class=fixed)
        .logo 
            a(href="index.html")
                img(src="https://github.com/space-prog/misocial/blob/master/src/img/logo.png?raw=true", alt="")
