        nav.nav.flex-between.items-center
            div(class=colorTheme).burger 
                span.bord.b1 
                span.bord.b2 
                span.bord.b3 
            .menu-burger(class=colorTheme)
                ul(class=colorTheme).ul
                    li(class=colorTheme).cancel
                       svg(xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" viewBox="0 0 50 50")
